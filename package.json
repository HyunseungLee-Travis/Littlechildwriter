{
  "name": "littlechildwriter",
  "description": "Source code for littlechildwriter.web.app",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "dev": "nuxi dev",
    "generate": "nuxi generate --modern=server",
    "analyze": "nuxi build --modern=server --analyze",
    "envbuild": "export TERM=xterm && yarn install --frozen-lockfile && yarn generate",
    "lint": "eslint --ext .ts,.js,.vue .",
    "lint:fix": "eslint --ext .ts,.js,.vue . --fix",
    "api": "node ./api/index.js",
    "prettier": "prettier --write .",
    "firebase": "yarn generate && firebase deploy",
    "upgrade": "yarn upgrade && nuxi upgrade",
    "formatter": "yarn lint:fix && yarn prettier",
    "git": "yarn formatter && yarn upgrade && git add --all && git commit -m $COMMIT && git push"
  },
  "dependencies": {
    "@mdi/font": "^7.0.96",
    "@pinia/nuxt": "^0.4.6",
    "firebase": "^9.13.0",
    "firebaseui": "^6.0.1",
    "perspective-api-client": "^3.1.0",
    "pinia": "^2.0.29",
    "vite-plugin-vuetify": "^1.0.0",
    "vue": "^3.2.45",
    "vue-gtag-next": "^1.14.0",
    "vuetify": "^3.0.2"
  },
  "devDependencies": {
    "@kevinmarrec/nuxt-pwa": "^0.15.0",
    "@nuxt/types": "2.15.8",
    "@nuxtjs/eslint-config-typescript": "12.0.0",
    "@nuxtjs/google-gtag": "^1.0.4",
    "eslint": "^8.25.0",
    "eslint-plugin-nuxt": "4.0.0",
    "firebase-admin": "11.5.0",
    "nuxt": "^3.1.1",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "typescript": "^4.8.4"
  }
}

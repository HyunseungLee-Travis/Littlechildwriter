    "browser-barcodescanner": "^1.0.5",
    "firebase": "^9.17.2",
    "firebaseui": "^6.0.2",
    "pinia": "^2.0.33",
    "vite-plugin-vuetify": "^1.0.2",
    "vue": "^3.2.47",
    "vue-gtag-next": "^1.14.0",
    "vuetify": "^3.1.9"
  },
  "devDependencies": {
    "@kevinmarrec/nuxt-pwa": "^0.17.0",
    "@nuxt/devtools": "^0.2.5",
    "@nuxt/types": "2.16.0",
    "@nuxtjs/eslint-config-typescript": "12.0.0",
    "@nuxtjs/google-gtag": "^1.0.4",
    "eslint": "^8.36.0",
    "eslint-plugin-nuxt": "4.0.0",

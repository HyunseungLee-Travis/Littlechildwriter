{
  "name": "littlechildwriter",
  "description": "Source code for littlechildwriter.web.app",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "dev": "nuxi dev",
    "generate": "nuxi generate --modern=server",
    "analyze": "nuxi build --modern=server --analyze",
    "envbuild": "export TERM=xterm && yarn install --frozen-lockfile && yarn generate",
    "lint": "eslint --ext .ts,.js,.vue .",
    "lint:fix": "eslint --ext .ts,.js,.vue . --fix",
    "api": "node ./api/index.js",
    "prettier": "prettier --write .",
    "firebase": "yarn generate && firebase deploy",
    "update": "yarn upgrade && ncu -u && nuxi upgrade",
    "git": "yarn formatter && yarn upgrade && git add --all"
  },
  "dependencies": {
    "@mdi/font": "^7.1.96",
    "@pinia/nuxt": "^0.4.7",

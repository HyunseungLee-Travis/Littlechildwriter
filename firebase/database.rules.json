{
  "rules": {
    ".read": true,
    ".write": true,
    "contents": {
      ".indexOn": ["/time", "/likes", "/views"],
      ".write": "auth.uid != null"
    },
    "users": {
      ".indexOn": "/libris",
      "$userId": {
        ".write": "$userId === auth.uid"
      }
    },
    "teams": {
      ".indexOn": "/points"
    }
  }
}
